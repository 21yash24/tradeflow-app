rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // USERS
    // Users can read any profile, but only update their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow update: if request.auth.uid == userId;
    }

    // USER-OWNED DATA
    // Users can only CUD their own data.
    match /(trades|accounts|discipline|streaks)/{docId} {
       allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
       allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // POSTS
    // Any authenticated user can read posts.
    // Users can only create, update, and delete their own posts.
    match /posts/{postId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.authorId;
    }
    
    // COMMENTS
    // Any authenticated user can read and create comments.
    // Users can only delete their own comments.
    match /posts/{postId}/comments/{commentId} {
        allow read, create: if request.auth != null;
        allow delete: if request.auth.uid == resource.data.authorId;
    }

    // FOLLOWS
    // Users can only manage their own following/follower lists.
    match /users/{userId}/following/{targetId} {
      allow write: if request.auth.uid == userId;
    }
    match /users/{userId}/followers/{followerId} {
      allow write: if request.auth.uid == followerId;
    }
  }
}